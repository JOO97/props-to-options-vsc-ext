						},
						{
							"name": "active",
							"value": "激活样式"
						},
						{
							"name": "gradient",
							"value": "渐变"
						},
						{
							"name": "shadow",
							"value": "阴影"
						},
						{
							"name": "size",
							"value": "大小"
						},
						{
							"name": "family",
							"value": "字体"
						},
						{
							"name": "weight",
							"value": "粗细"
						},
						{
							"name": "indent",
							"value": "缩进"
						},
						{
							"name": "spacing",
							"value": "文本间距"
						},
						{
							"name": "color",
							"value": "颜色"
						},
						{
							"name": "border",
							"value": "边框"
						},
						{
							"name": "radius",
							"value": "圆角"
						},
						{
