{
  "name": "props2options",
  "displayName": "props2options",
  "description": "props2options",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:props2options.transform"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "propsToOptions",
          "title": "Props to Options",
          "icon": "images/dep.svg"
        }
      ]
    },
    "views": {
      "propsToOptions": [
        {
          "id": "collectionsView",
          "name": "Collections"
        },
        {
          "id": "dictionaryView",
          "name": "Dictionary"
        }
      ]
    },
    "commands": [
      {
        "command": "props2options.transform",
        "title": "props2options: Transform"
      },
      {
        "command": "props2options.refresh",
        "title": "Refresh",
        "icon": {
          "light": "images/light/refresh.svg",
          "dark": "images/dark/refresh.svg"
        }
      },
      {
        "command": "props2options.addCollection",
        "title": "New",
        "icon": {
          "light": "images/light/folder.svg",
          "dark": "images/dark/folder.svg"
        }
      },
      {
        "command": "props2options.editCollection",
        "title": "Edit",
        "icon": {
          "light": "images/light/edit.svg",
          "dark": "images/dark/edit.svg"
        }
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "props2options.transform",
          "when": "editorHasSelection"
        }
      ],
      "view/title": [
        {
          "command": "props2options.refresh",
          "group": "navigation"
        },
        {
          "command": "props2options.addCollection",
          "group": "navigation",
          "when": "view == collectionsView"
        },
        {
          "command": "props2options.editCollection",
          "group": "navigation",
          "when": "view == collectionsView"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "prettier": "^2.8.2"
  }
}
