{
  "name": "props2options",
  "displayName": "props2options",
  "description": "props2options",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:props2options.transform"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "propsToOptions",
          "title": "Props to Options",
          "icon": "images/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "propsToOptions": [
        {
          "id": "collectionsView",
          "name": "Collections"
        },
        {
          "id": "dictionaryView",
          "name": "Dictionary"
        }
      ]
    },
    "commands": [
      {
        "command": "props2options.transform",
        "title": "Props ➡ DataV Options"
      },
      {
        "command": "props2options.refresh",
        "title": "Refresh",
        "icon": {
          "light": "images/light/refresh.svg",
          "dark": "images/dark/refresh.svg"
        }
      },
      {
        "command": "props2options.addCollection",
        "title": "New",
        "icon": {
          "light": "images/light/add.svg",
          "dark": "images/dark/add.svg"
        }
      },
      {
        "command": "props2options.editCollection",
        "title": "Edit",
        "icon": {
          "light": "images/light/edit.svg",
          "dark": "images/dark/edit.svg"
        }
      },
      {
        "command": "props2options.addDictionary",
        "title": "New",
        "icon": {
          "light": "images/light/add.svg",
          "dark": "images/dark/add.svg"
        }
      },
      {
        "command": "props2options.editDictionary",
        "title": "Edit",
        "icon": {
          "light": "images/light/edit.svg",
          "dark": "images/dark/edit.svg"
        }
      },
      {
        "command": "props2options.delDictionary",
        "title": "Delete",
        "icon": {
          "light": "images/light/trash.svg",
          "dark": "images/dark/trash.svg"
        }
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "props2options.transform",
          "when": "editorHasSelection"
        }
      ],
      "view/title": [
        {
          "command": "props2options.refresh",
          "group": "navigation"
        },
        {
          "command": "props2options.addCollection",
          "group": "navigation",
          "when": "view == collectionsView"
        },
        {
          "command": "props2options.editCollection",
          "group": "navigation",
          "when": "view == collectionsView"
        },
        {
          "command": "props2options.addDictionary",
          "group": "navigation",
          "when": "view == dictionaryView"
        }
      ],
      "view/item/context": [
        {
          "command": "props2options.editDictionary",
          "when": "view == dictionaryView",
          "group": "inline@1"
        },
        {
          "command": "props2options.delDictionary",
          "when": "view == dictionaryView",
          "group": "inline@2"
        }
      ]
    },
    "configuration": {
      "title": "Props to Options",
      "properties": {
        "props2options.dictionary": {
          "markdownDescription": "The list of bookmarks",
          "type": "array",
          "default": [
            {
              "name": "bg",
              "value": "背景"
            },
            {
              "name": "background",
              "value": "背景"
            },
            {
              "name": "text",
              "value": "文本"
            },
            {
              "name": "animation",
              "value": "动画"
            },
            {
              "name": "cursor",
              "value": "鼠标样式"
            },
            {
              "name": "padding",
              "value": "内边距"
            },
            {
              "name": "margin",
              "value": "外边距"
            },
            {
              "name": "overflow",
              "value": "溢出"
            },
            {
              "name": "hover",
              "value": "鼠标经过样式"
            },
            {
              "name": "active",
              "value": "激活样式"
            },
            {
              "name": "gradient",
              "value": "渐变"
            },
            {
              "name": "shadow",
              "value": "阴影"
            },
            {
              "name": "size",
              "value": "大小"
            },
            {
              "name": "family",
              "value": "字体"
            },
            {
              "name": "weight",
              "value": "粗细"
            },
            {
              "name": "indent",
              "value": "缩进"
            },
            {
              "name": "spacing",
              "value": "文本间距"
            },
            {
              "name": "color",
              "value": "颜色"
            },
            {
              "name": "border",
              "value": "边框"
            },
            {
              "name": "radius",
              "value": "圆角"
            },
            {
              "name": "type",
              "value": "类型"
            },
            {
              "name": "column",
              "value": "列"
            }
          ],
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "word name"
              },
              "value": {
                "type": "string",
                "description": "word cn name"
              }
            },
            "additionalProperties": false,
            "required": [
              "name",
              "value"
            ]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "prettier": "^2.8.2"
  }
}
