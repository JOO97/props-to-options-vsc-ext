							"name": {
								"type": "string",
								"description": "word name"
							},
							"value": {
								"type": "string",
								"description": "word cn name"
							}
						},
						"additionalProperties": false,
						"required": [
							"name",
							"value"
						]
					}
				},
				"props2options.collections": {
					"markdownDescription": "The list of collections",
					"type": "array",
					"default": [
						{
							"name": "padding",
							"value": {
								"type": "padding",
